<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace= "com.example.repository.UserLoginMapper">
<!--マッピング定義（ユーザー）-->
<resultMap type="com.example.domain.user.model.MUser" id="user"> 
<id column="user_id" property="userId" /> 
<result column="start_date" property="startDate" />
<result column="end_date" property="endDate" /> 
<result column="status" property="status" /> 
<result column="start_time" property="startTime" /> 
<result column="end_time" property="endTime" /> 
<result column="break_time" property="breakTime" /> 
<result column="note" property="note" /> 
<result column="attendance_id" property="attendanceId"/>
</resultMap>

<select id="findloginUser" parameterType="int"
		resultType="com.example.form.Employeelogin">
		select
		user_id,
		name,
		name_kana,
		password
		from Employee
		where user_id=#{user_id};


	</select>


<!--ユーザー1件登録-->
<update id="updateOne">
  update 
  	Attendance 
  set
    end_date = #{endDate},
    status = #{status},
    end_time = #{endTime},
    break_time = #{breakTime},
  	note = #{note}
  where
  	attendance_id = #{attendanceId}
</update>
	
	
	<select id="findOne" resultMap="user">
		select 
				user_id
		from
				attendance
		where
				attendance_id = #{attendanceId}
	</select>
</mapper>
